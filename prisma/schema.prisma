datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = -1
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  name     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
